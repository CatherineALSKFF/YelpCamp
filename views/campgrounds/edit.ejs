<% layout('./layouts/boilerplate')%>
 





<div class="row">
    <h1 class="text-center">Edit Campground</h1>
  
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
                <div class="mb-3 row">
                    <label for="title" class="col col-12 form-label">Title</label>
                    <input type="text" class="col col-12 form-control" name="campground[title]" id="title" value="<%= campground.title %>" required>
                </div> 
    
                <div class="mb-3 row">
                    <label for="location" class="col col-12 form-label">Location</label>
                    <input type="text" class="col col-12 form-control" name="campground[location]" id="location" value="<%= campground.location %>" required>
                </div>
    
                <div class="mb-3 row">
                    <label for="image" class="col col-12 form-label">Image URL</label>
                    <input type="text" class="col col-12 form-control" name="campground[image]" id="image" value="<%= campground.image %>" required>
                </div>
    
                <div class="mb-3 row">
                    <label  class='form-label' for="description">Description</label>
                    <textarea type="text" class="col col-12 form-control" name="campground[description]" id="description" required><%= campground.description %> </textarea>
                </div>
                <div class="mb-3 row" >
                    <div class="input-group">
                        <label class="col col-12 form-label" for="price">Campground Price</label>
                        <span class="input-group-text "  id="price-label">$</span>
                        <input id="price" type="text" class="form-control col col-12" aria-label="Amount (to the nearest dollar)" aria-describedby="price-label" placeholder="0.00"
                        name="campground[price]" value="<%= campground.price %>" required>
                      
                      </div>
                    </div>
        
                    <div class="mb-3"> 
<button type="submit" class="btn btn-info">Update Campground</button>
</div>
            </form>

        <a href='/campgrounds/<%= campground.id %>'>Back to Campground</a>
        


    </div>
</div>




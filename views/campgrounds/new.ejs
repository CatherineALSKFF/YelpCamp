<% layout('./layouts/boilerplate')%>
   



    <h1 class="text-center">New Campgrounds</h1>
  <div class="col-6 offset-3">
            <form action="/campgrounds" method="post"  class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="invalid-feedback">
                        Please choose a title.
                      </div>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                </div> 
    
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="invalid-feedback">
                        Please provide a valid city.
                      </div>
                </div>

                <div class="mb-3">
                  <label for="image" class="form-label">Add a Images</label>
                  <input class="form-control" type="file" name="image" id="image" multiple>
                </div>

               

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control " type="text" name="campground[description]" id="description" required></textarea>
                </div>
                <div class="mb-3">
                    <div class="input-group">
                        <label class="form-label" for="price">Campground Price</label>
                        <span class="input-group-text "  id="price-label">$</span>
                        <input class="form-control  " id="price" type="text" class="form-control row" aria-label="Amount (to the nearest dollar)" required aria-describedby="price-label" placeholder="0.00"
                        name="campground[price]">
                      
                      </div>
                    </div>
        
                    <div class="mb-3"> 
<button type="submit" class="btn btn-info"> Add a Campground</button>
</div>
            </form>



        <a href="/campgrounds">Back to all Campgrounds</a>
        


    </div>
</div>



<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center alin-content-center mt-5">
<div class="row">
    
<!-- <h1>Login</h1> -->
    <div class="col-lg-6 offset-lg-3  ">
        <div class="card shadow">
            <img src="https://media.istockphoto.com/id/907649404/photo/you-have-to-get-all-the-wood-in-order.jpg?b=1&s=170667a&w=0&k=20&c=LAI4F-iXg31g_P12XjCDAGPfbstCNLCjfR4zK4hUJOE=" alt="" class="card-img-top">


            <div class="valid-feedback">
                Looks good!
            </div>
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="text" class="form-control" type="text" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
                </div>
                <div class="d-grid gap-2">
                <button class="btn btn-success ">Login</button>
            </div>
            </form>


        </div>
        </div>
    </div>
</div>
</div>
















